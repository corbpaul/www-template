{
  "name": "www-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:corbpaul/www-template.git",
  "author": "Paul Corbett <3407807+corbpaul@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build:client": "NODE_ENV=production webpack --config ./tools/webpack/production.ts",
    "build:server": "rimraf ./dist && tsc",
    "build": "yarn build:server && yarn build:client",
    "dev": "yarn start:dev",
    "postbuild": "copyup -e \"./src/**/*.{ts,tsx}\" \"./src/**/*\" \"dist\" && copyfiles \"./public/**/*\" \"dist\"",
    "prepare": "husky install",
    "start:client": "webpack serve --config ./tools/webpack/development.ts",
    "start:dev": "concurrently --names \"EXPRESS,WEBPACK\" \"PORT=3001 yarn start:server\" \"yarn start:client\"",
    "start:server": "NODE_ENV=development nodemon -r tsconfig-paths/register src/server/index.ts",
    "start": "node dist/server/index.js",
    "test:lint:fix": "eslint . --fix",
    "test:lint": "eslint .",
    "test:static": "yarn test:lint && yarn test:types",
    "test:types:coverage": "typescript-coverage-report",
    "test:types": "type-coverage",
    "test:unit:coverage": "jest --coverage --passWithNoTests",
    "test:unit": "jest --passWithNoTests",
    "test": "yarn test:static && yarn test:unit"
  },
  "dependencies": {
    "@apollo/client": "3.3.20",
    "apollo-server-caching": "0.7.0",
    "apollo-server-express": "2.25.2",
    "compression": "1.7.4",
    "dotenv-safe": "8.2.0",
    "express": "4.17.1",
    "express-winston": "4.1.0",
    "graphql": "15.5.1",
    "graphql-import-node": "0.0.4",
    "graphql-modules": "1.4.3",
    "hbs": "4.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-router-dom": "5.2.0",
    "serialize-javascript": "6.0.0",
    "theme-ui": "0.10.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@pmmmwh/react-refresh-webpack-plugin": "0.4.3",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/react-hooks": "7.0.1",
    "@types/compression": "1.7.0",
    "@types/dotenv-safe": "8.1.1",
    "@types/express": "4.17.12",
    "@types/hbs": "4.0.1",
    "@types/jest": "26.0.23",
    "@types/jest-axe": "3.5.1",
    "@types/node": "15.12.2",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@types/react-helmet": "6.1.1",
    "@types/react-router-dom": "5.1.7",
    "@types/serialize-javascript": "5.0.0",
    "@types/styled-components": "5.1.10",
    "@types/webpack-dev-server": "3.11.4",
    "@types/webpack-manifest-plugin": "3.0.5",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "4.0.0-alpha.0",
    "concurrently": "6.2.0",
    "copyfiles": "2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "2.11.3",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "6.0.0",
    "jest": "27.0.6",
    "jest-axe": "5.0.1",
    "jest-transform-graphql": "2.1.0",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.9",
    "prettier": "2.3.2",
    "react-refresh": "0.10.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.9.0",
    "type-coverage": "2.18.0",
    "typescript": "4.3.5",
    "typescript-coverage-report": "0.6.0",
    "webpack": "5.42.0",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2",
    "webpack-manifest-plugin": "3.1.1",
    "webpack-merge": "5.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn test:lint:fix"
  },
  "typeCoverage": {
    "atLeast": 80,
    "ignoreFiles": [
      "cypress/**/*",
      "tests/**/*"
    ]
  }
}
